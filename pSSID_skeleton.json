{
    "_meta":{
        "display-name": "Example Measurements"
    },

    "archives": {
        "example_rabbitmq_archive": {
            "archiver": "rabbitmq",
            "data": {
                "measurement-agent": "{% scheduled_by_address %}",
                "routing-key": "pscheduler_raw",
                "url": "amqp://elastic:elastic@elastic"
            }
        }
    },

    "tests": {
        "example_test_rtt": {
            "type": "rtt",
            "spec": {
                "dest": "testpoint2"
            }
        },
        "example_test_latencybg": {
            "type": "latencybg",
            "spec": {
                "source": "{% address[0] %}",
                "dest": "{% address[1] %}",
                "flip": "{% flip %}"
            }
        },
        "example_test_throughput": {
            "type": "throughput",
            "spec": {
                "dest": "perfsonar-bin-arbl.umnet.umich.edu"
            }
        },
        "example_test_trace": {
            "type": "trace",
            "spec": {
                "source": "{% address[0] %}",
                "dest": "{% address[1] %}"
            }
        }
    },

    "schedules": {
        "schedule_every_4_hours": {
            "repeat": "0 */4 * * *"
        },
        "schedule_every_minute": {
            "repeat": "*/1 * * * *"
        },   
        "schedule_every_hour": {
            "repeat": "0 * * * *"
        },   
        "schedule_Tuesday_10AM": {
            "repeat": "0 10 * * 2"
        },   
        "schedule_Tuesday_10:10AM": {
            "repeat": "10 10 * * 2"
        },   
        "schedule_10_minutes": {
            "repeat": "*/10 * * * *"
        }
    },

    "BSSID_channels": {
	"EduRoam_channels": [ 11, 12, 13, 14, 15 ],
	"MWireless_channels": [ 1, 2, 3, 4, 5, 10 ]
    },

    "SSID_profiles" : {
	"MWireless_profile": {
	    "SSID": "MWireless",
	    "channels": "MWireless_channles",
	    "channel_mismatch_warning": true,
	    "channel_mismatch_connect": false,
            "min_signal": -55,
	    "min_qualifying": 1,
	    "AuthMethod": {
		"type": "User",
		"UID": "fakeUID",
		"Password": "fakepassword"
	    }
	},

	"EduRoam_profile": {
	    "SSID": "EduRoam",
	    "channels": "EduRoam_channels",
	    "channel_mismatch_warning": true,
	    "channel_mismatch_connect": false,
            "min_signal": -55,
	    "min_qualifying": 0,
	    "AuthMethod": {
		"type": "User",
		"UID": "fakeUID",
		"Password": "fakepassword"
	    }
	},
    },

    "SSID_groups": {
	"all_profiles": ["EduRoam_profile", "MWireless_profile"]
    },

    "network_interfaces": {
	"primary_network_interface": "wlan0",
	"future_network_interface": "wlan1"
    },

    "BSSID_scans" : {
	"primary_BSSIDs": {
	    "interface": "primary_network_interface",
	    "profiles": "all_profiles",
	    "schedule": [ "schedule_every_5_min" ],
	    "priority": 1
	}
    },

    "tasks": {
        "example_task_rtt": {
            "profiles": "MWireless_profile",
	    "BSSIDs": "primary_BSSIDs",
            "schedule": [ "schedule_every_hour", "schedule_Tuesday_10:10AM" ],
            "priority": 3,
            "test": "example_test_rtt",
            "archives": [ "example_rabbitmq_archive" ],
            "_meta": {
                "display-name": "Example RTT Tests"
            }
        },

        "example_task_throughput": {
            "profiles": "all_profiles",
	    "BSSIDs": "primary_BSSIDs",
            "schedule": [ "schedule_four_hours", "schedule_Tuesday_10:10AM" ],
            "priority": 2,
            "test": "example_test_throughput",
            "archives": [ "example_rabbitmq_archive" ],
            "_meta": {
                "display-name": "Example RTT Tests"
            }
        }
    }
}
